# ALLOW_EMPTY_PASSWORD is recommended only for development.
ALLOW_EMPTY_PASSWORD=yes

# Docker mariadb service
MARIADB_USER=bn_wordpress
MARIADB_DATABASE=bitnami_wordpress

# Docker wordpress service
WORDPRESS_DATABASE_HOST=mariadb
WORDPRESS_DATABASE_PORT_NUMBER=3306
WORDPRESS_DATABASE_USER=bn_wordpress
WORDPRESS_DATABASE_NAME=bitnami_wordpress

# Site variables
WORDPRESS_BLOG_NAME="Reading Glow Co."
WORDPRESS_PLUGINS=woocommerce,https://github.com/woocommerce/woocommerce/releases/download/wc-beta-tester-3.0.0/woocommerce-beta-tester.zip
WORDPRESS_USERNAME=merchant
WORDPRESS_PASSWORD=password
WORDPRESS_EMAIL=merchant@example.com
WORDPRESS_CUSTOMER_USERNAME=customer
WORDPRESS_CUSTOMER_PASSWORD=password
WORDPRESS_CUSTOMER_EMAIL=customer@example.com
